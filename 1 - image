# 1 просмотр изображений
import cv2

image = cv2.imread("C:\\Users\\godpa\\PycharmProjects\\pythonProject\\.venv\\screen_camera.png")  # путь только из англ. символов
image1 = cv2.resize(image, (image.shape[0] // 2, image.shape[1] // 3))  # изменение размера


cv2.imshow('rere', image1)

cv2.waitKey(10_000)  # 0 = бесконечность
